generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model customer {
  id       Int    @id @default(autoincrement())
  name     String
  lastname String
  email    String
  password String

  Request request[]
}

model product {
  id          Int    @id @default(autoincrement())
  product     String
  type        String @default("")
  description String
  value       Float

  Request request[]
}

model request {
  id          Int @id @default(autoincrement())
  id_product  Int
  id_custumer Int

  Product  product  @relation(fields: [id_product], references: [id])
  Custumer customer @relation(fields: [id_custumer], references: [id])
}
